@model IEnumerable<WebTinTuc.Models.BinhLuan>

@{
    ViewBag.Title = "DanhSachBinhLuan";
    Layout = "~/Views/Shared/_WebTinTucAdmin.cshtml";
}
<br />

<h2>Danh sách bình luận</h2>
<br />
@using (Html.BeginForm("DanhSachBinhLuan", "BinhLuan", FormMethod.Get))
{
    <div class="col-lg-12 col-md-6 col-sm-6 col-xs-12">
        <div class="table_price full">
            <div class="inner_table_price">
                <div class="price_table_head blue1_bg">
                    <h2 style="font-size:15px ; text-align:left"> Nhập thông tin tìm kiếm :</h2>
                </div>
                <br />
                    <div class="row">
                        <label class="col-md-2">Từ khóa:</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" name="tuKhoa" value="@ViewBag.tuKhoa" />
                        </div>
                        <div class="col-md-2">
                            <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
                        </div>

                    </div>

                </div>       
        </div>
    </div>
}
<p style="text-align:right;">
    @Html.ActionLink("Thêm mới", "ThemMoiBinhLuan", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered" id="sampleTable">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.IdBinhLuan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdBaiViet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNguoiDung)
            </th>*@
        <th>
            Tên người dùng
        </th>
        <th>
            Ngày bình luận
        </th>
        <th>
            Nội dung
        </th>
        <th style="width:100px;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.IdBinhLuan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdBaiViet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNguoiDung)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.TenNguoiDung)
            </td>
            <td>
                @Convert.ToDateTime(item.NgayBinhLuan).ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
                <a href="SuaBinhLuan/@item.IdBinhLuan" class="btn btn-info">
                    <i class="ace-icon fa fa-pencil"></i>
                </a>
                <a href="XoaThongTin/@item.IdBinhLuan" class="btn btn-xs btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa thông tin này ?');">
                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                </a>
            </td>
        </tr>
    }

</table>
