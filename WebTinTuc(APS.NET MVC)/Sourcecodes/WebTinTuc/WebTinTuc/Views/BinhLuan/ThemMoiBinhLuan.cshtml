@model WebTinTuc.Models.BinhLuan

@{
    ViewBag.Title = "ThemMoiBinhLuan";
    Layout = "~/Views/Shared/_WebTinTucAdmin.cshtml";
}
<br />
<h2>Thêm mới bình luận</h2>
<br />
@using (Html.BeginForm("ThemMoiBinhLuan", "BinhLuan", FormMethod.Post, new
{
    encType = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Bình luận</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Id bài viết: <a style="color:red">*</a> </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.IdBaiViet, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdBaiViet, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Id người dùng: <a style="color:red">*</a> </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.IdNguoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdNguoiDung, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Tên người dùng: <a style="color:red">*</a> </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenNguoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNguoiDung, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Nội dung: <a style="color:red">*</a> </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
        </div>
    </div>
    
         <div class="col-md-12" style="text-align:right">
            <input type="submit" value="Thêm mới" class="btn btn-primary" />
        </div>
    
</div>
}

<div>
    @Html.ActionLink("Trở về", "DanhSachBinhLuan")
</div>
