@model WebTinTuc.Models.NguoiDung

@{
    ViewBag.Title = "SuaTTNguoiDung";
    Layout = "~/Views/Shared/_WebTinTucAdmin.cshtml";
}
<br />
<h2>Sửa thông tin người dùng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <br />
    <h4>Nhập thông tin cần sửa</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label"> ID người dùng:</label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.IdNguoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdNguoiDung, "", new { @class = "text-danger" })
        </div>
        <label for="staticEmail" class="col-sm-2 col-form-label"> ID vai trò :</label>
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.IdVaiTro,
         (SelectList)ViewBag.VaiTro, "---Chọn vai trờ---", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdVaiTro, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Tài khoản <a style="color:red">*</a> :</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Mật khẩu <a style="color:red">*</a> :</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Tên người dùng <a style="color:red">*</a> :</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenNguoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNguoiDung, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class=" col-md-12" style="text-align:right">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    </div>

</div>
}

<div>
    @Html.ActionLink("Trở lại", "DanhSachNguoiDung")
</div>
