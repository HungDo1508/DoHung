@model IEnumerable<WebTinTuc.Models.NguoiDung>

@{
    ViewBag.Title = "DanhSachNguoiDung";
    Layout = "~/Views/Shared/_WebTinTucAdmin.cshtml";
}

<br />
<h2>Danh Sách Người Dùng</h2>
<br />
@using (Html.BeginForm("DanhSachNguoiDung", "NguoiDung", FormMethod.Get))
{
    <div class="col-lg-12 col-md-6 col-sm-6 col-xs-12">
        <div class="table_price full">
            <div class="inner_table_price">
                <div class="price_table_head blue1_bg">
                    <h2 style="font-size:15px ; text-align:left"> Nhập thông tin tìm kiếm :</h2>
                </div>
                <br />
                <div class="row">
                    <label class="col-md-2">Từ khóa:</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="tuKhoa" value="@ViewBag.tuKhoa" />
                    </div>
                    <label class="col-md-2">Vai Trò:</label>
                    <div class="col-md-3">
                        @*Hiển thị danh sách danh mục*@
                        @Html.DropDownList("IdVaiTro",
                        (SelectList)ViewBag.VaiTro, "---Chọn vai trò---", new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
                    </div>

                </div>

            </div>
        </div>
    </div>
}

<p style="text-align:right;">
    @Html.ActionLink("Thêm mới", "ThemMoiTTNguoiDung", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered" id="sampleTable">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.IdNguoiDung)
            </th>*@
        <th>
            Id Vai Trò
        </th>
        <th>
            Tài Khoản
        </th>
        <th>
            Mật Khẩu
        </th>
        <th>
            Tên Người Dùng
        </th>
        <th style="width:100px;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.IdNguoiDung)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.IdVaiTro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaiKhoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNguoiDung)
            </td>
            <td>
                <a href="SuaTTNguoiDung/@item.IdNguoiDung" class="btn btn-info">
                    <i class="ace-icon fa fa-pencil"></i>
                </a>
                <a href="XoaThongTin/@item.IdNguoiDung" class="btn btn-xs btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa thông tin này ?');">
                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                </a>
            </td>
        </tr>
    }

</table>
