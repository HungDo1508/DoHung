@model WebTinTuc.Models.NguoiDung
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/Login.cshtml";
}

@using (Html.BeginForm("DangNhap", "DangNhap", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Đăng Nhập</p>

                                    <form class="mx-1 mx-md-4">
                                        <div class="mb-3 row">

                                            <label for="staticEmail" class="col-sm-5 col-form-label">Tài khoản :</label>
                                            <div class="col-md-7">
                                                @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "form-control", @placeholder = "Tên đăng nhập" })
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label for="staticEmail" class="col-sm-5 col-form-label">Mật khẩu  :</label>
                                            <div class="col-md-7">
                                                @Html.PasswordFor(model => model.MatKhau, new {  @class = "form-control" , @placeholder = "Mật khẩu" })
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <div class="col-md-3">
                                                 <input type="submit" value="Đăng nhập" id="btn-dangky" class="btn btn-primary btn-lg">
                                               
                                            </div>
                                            <div class="col-md-9" style="text-align:right">
                                                @Html.ActionLink("Bạn chưa có tài khoản ?", "DangKi")
                                            </div>
                                        </div>

                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}