@using WebTinTuc.Models
@{
    var info = (NguoiDung)Session["useronline"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Quản Trị</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- site icon -->
    <link rel="icon" href="~/Content/Images/logo.jpg" type="image/png" />
    <!-- bootstrap css -->
    <link rel="stylesheet" href="/Content/css/bootstrap.min.css" />
    <!-- site css -->
    <link rel="stylesheet" href="~/Content/style.css" />
    @*<link href="~/Content/Site.css" rel="stylesheet" />*@
    <!-- responsive css -->
    <link rel="stylesheet" href="/Content/css/responsive.css" />
    <!-- color css -->
    <!--<link rel="stylesheet" href="/Content/css/colors.css" />-->
    <!-- select bootstrap -->
    <link rel="stylesheet" href="/Content/css/bootstrap-select.css" />
    <!-- scrollbar css -->
    <link rel="stylesheet" href="/Content/css/perfect-scrollbar.css" />
    <!-- custom css -->
    <link rel="stylesheet" href="/Content/css/custom.css" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->





</head>
<body class="dashboard dashboard_1">
    <script src="~/Plugin/ckeditor/ckeditor.js"></script>
    <div class="full_container">
        <div class="inner_container">
            <!-- Sidebar  -->
            <nav id="sidebar">
                <div class="sidebar_blog_1">
                    <div class="sidebar-header">
                        <div class="logo_section">
                            <a href="index.html"><img class="logo_icon img-responsive" src="/Content/Images/logo/logo_icon.png" alt="#" /></a>
                        </div>
                    </div>
                    <div class="sidebar_user_info">
                        <div class="icon_setting"></div>
                        <div class="user_profle_side">
                            <div class="user_img"><img class="img-responsive" src="~/Content/Images/avt.jpg" alt="#" /></div>
                            <div class="user_info">
                                <h6>@info.TenNguoiDung</h6>
                                <p><span class="online_animation"></span> Online</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar_blog_2">
                    <h4>Danh Mục</h4>
                    <ul class="list-unstyled components">
                        @if (info != null)
                        {
                            <li><a href="~/Home/TrangChu"><i class="fa fa-clone yellow_color"></i> <span>Trang Chủ</span></a></li>
                            <li><a href="~/BaiViet/DanhSach"><i class="fa fa-clock-o orange_color"></i> <span>Bài Viết</span></a></li>
                            if (info.IdVaiTro == "AD")
                            {
                                <li><a href="~/NguoiDung/DanhSachNguoiDung"><i class="fa fa-diamond purple_color"></i> <span>Người Dùng</span></a></li>
                                <li><a href="~/BinhLuan/DanhSachBinhLuan"><i class="fa fa-table purple_color2"></i> <span>Bình Luận</span></a></li>
                            }

                        }
                    </ul>
                </div>
            </nav>
            <!-- end sidebar -->
            <!-- right content -->
            <div id="content">
                <!-- topbar -->
                <div class="topbar">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <div class="full">
                            <button type="button" id="sidebarCollapse" class="sidebar_toggle"><i class="fa fa-bars"></i></button>
                          
                            <div class="right_topbar">
                                <div class="icon_info">
                                    <ul>
                                       
                                    </ul>
                                    <ul class="user_profile_dd">
                                        <li>
                                            <a class="dropdown-toggle" data-toggle="dropdown">
                                                <img class="img-responsive rounded-circle" src="~/Content/Images/avt.jpg" alt="#" />
                                                <span class="name_user">@info.TenNguoiDung</span>
                                            </a>
                                            <div class="dropdown-menu">
                                               
                                                
                                                 <a href="@Url.Action("DangXuat","DangNhap")" class="dropdown-item">Log Out</a>

                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
                <!-- end topbar -->
                <!-- dashboard inner -->
                <div class="midde_cont">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                    <!-- footer -->

                </div>
                <!-- end dashboard inner -->
            </div>
        </div>
    </div>
    <!-- jQuery -->
    @*<script src="/Content/js/jquery.min.js"></script>*@
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <script src="/Content/js/popper.min.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/bootbox.min.js"></script>

    <!-- wow animation -->
    <script src="/Content/js/animate.js"></script>
    <!-- select country -->
    <script src="/Content/js/bootstrap-select.js"></script>
    <!-- owl carousel -->
    <script src="/Content/js/owl.carousel.js"></script>
    <!-- chart js -->
    <script src="/Content/js/Chart.min.js"></script>
    <script src="/Content/js/Chart.bundle.min.js"></script>
    <script src="/Content/js/utils.js"></script>
    <script src="/Content/js/analyser.js"></script>
    <!-- nice scrollbar -->
    <script src="/Content/js/perfect-scrollbar.min.js"></script>
    <script>
        var ps = new PerfectScrollbar('#sidebar');
    </script>
    <script src="~/Scripts/tinymce/tinymce.js"></script>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>


    @*<script src="~/Scripts/tinymce/tinymce.js"></script>*@
    <!-- custom js -->
    @*<script src="/Content/js/chart_custom_style1.js"></script>*@
    @*<script src="/Content/js/custom.js"></script>*@
    @RenderSection("jsFooter", required: false)
</body>
</html>